<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore = "UnusedResources">
    <!-- Base application theme. -->
    <style name="Theme.DocumentCheckingAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Turn off action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="colorTertiary">@color/deepGreen</item>

        <item name="colorIconBackground">@color/icon_background</item>
        <item name="colorIconForeground">@color/white</item>

        <item name="textColorSecondary">@color/light_grey</item>

        <item name="dimenAppIconSize">@dimen/app_icon</item>
        <item name="dimenErrorIconSize">@dimen/error_icon</item>

        <item name="textAppearanceTitleLarge">@style/Title.Large</item>
        <item name="textAppearanceTitleMedium">@style/Title.Medium</item>
        <item name="textAppearanceTitleSmall">@style/Title.Small</item>
        <item name="textAppearanceBodyMedium">@style/Body</item>
        <item name="textAppearanceBodyMediumBold">@style/Body.Bold</item>
        <item name="textAppearanceBodyMediumLink">@style/Body.Link</item>
        <item name="textAppearanceBodySmall">@style/Body.Small</item>
        <item name="textAppearanceCaption">@style/Caption</item>
        <item name="dividerColor">@color/divider</item>
        <item name="textAppearanceButton">@style/Body.Button</item>
        <item name="textColourSecondaryButton">@color/lightGreen</item>
        <item name="textAppearanceSecondaryButton">@style/Body.Button.Secondary</item>
        <item name="bulletpointSize">@dimen/bullet_size</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
    </style>

    <style name="Theme.DocumentCheckingAndroid.FullScreenDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>